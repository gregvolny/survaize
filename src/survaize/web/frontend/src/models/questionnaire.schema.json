        "max_value": {
          "title": "Max Value",
          "description": "Maximum allowed value",
          "type": "number"
        },
        "decimal_places": {
          "title": "Decimal Places",
          "description": "Number of decimal places allowed",
          "type": "integer"
        }
      },
      "required": [
        "number",
        "id",
        "text",
        "type"
      ]
    },
